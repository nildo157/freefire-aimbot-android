<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Free Fire Aimbot"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Status Display -->
    <TextView
        android:id="@+id/status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status: Carregando..."
        android:textSize="16sp"
        android:background="#F0F0F0"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Recording Status -->
    <TextView
        android:id="@+id/recording_status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status da gravação"
        android:textSize="14sp"
        android:background="#E8F5E8"
        android:padding="8dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone" />

    <!-- Main Controls -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Controles Principais"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/start_overlay_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar Overlay"
        android:textSize="16sp"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/stop_overlay_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Parar Overlay"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <!-- Recording Controls -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gravação de Tela"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/record_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar Gravação"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <!-- Settings -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Configurações"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/settings_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Abrir Configurações"
        android:textSize="16sp"
        android:layout_marginBottom="24dp" />

    <!-- Instructions -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Instruções:\n\n1. Configure as permissões nas configurações\n2. Inicie o overlay para ativar o aimbot\n3. Abra o Free Fire e use o painel flutuante\n4. Use a gravação para capturar suas jogadas"
        android:textSize="14sp"
        android:background="#F8F9FA"
        android:padding="12dp"
        android:layout_marginTop="16dp" />

    <!-- Warning -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="⚠️ Aviso: Use com responsabilidade. Este aplicativo é apenas para fins educacionais."
        android:textSize="12sp"
        android:textStyle="italic"
        android:background="#FFF3CD"
        android:padding="8dp"
        android:layout_marginTop="16dp" />

</LinearLayout>